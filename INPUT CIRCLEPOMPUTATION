package labTest2;

import java.util.Scanner;

public class CircleComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*Write a program called CircleComputation that prompts user for the radius of a circle in floating point number. 
		 * The program shall read the input as double; compute the diameter, circumference, and area of the circle in double; and print the values rounded to 2 decimal places. 
		 * Use System-provided constant Math.PI for pi. The formulas are:

		diameter = 2.0 * radius;
		area = Math.PI * radius * radius;
		circumference = 2.0 * Math.PI * radius;*/
		
		double radius, diameter, circumference, area;
		
		Scanner a = new Scanner(System.in);
		
		System.out.println("Radius of the circle:");
		radius=a.nextDouble();
		
		diameter = 2.0*radius;
		area = Math.PI * radius * radius;
		circumference = 2.0 * Math.PI * radius;
	
		System.out.println("The diameter is "+diameter);
		System.out.printf("The area of circle is %.2f ",area);
		System.out.printf("\nThe circumference is %.2f ",circumference);

}
}
